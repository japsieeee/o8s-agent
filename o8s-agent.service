[Unit]
Description=o8s agent started running in server's background to monitor, log and operate
After=network.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/lib/o8s-agent/o8s-agent
Restart=on-failure
RestartSec=5
User=root

# Logs go to journal
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
